
@{
    Layout = null;
}

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Login - DevGenius Finance</title>
    <link href="~/Content/reset/reset.css?v=@DateTime.Now.Ticks" rel="stylesheet" type="text/css" />
    <link href="https://fonts.googleapis.com/css?family=Roboto|Roboto+Condensed" rel="stylesheet">
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.1.2/css/bootstrap.min.css?v=@DateTime.Now.Ticks" integrity="sha384-Smlep5jCw/wG7hdkwQ/Z5nLIefveQRIY9nfy6xoR1uRYBtpZgI6339F5dgvm/e9B" crossorigin="anonymous">
    <link href="~/Content/login/login.css?v=@DateTime.Now.Ticks" rel="stylesheet" type="text/css" />
    <link href="~/imgs/navicon.png" rel="icon" type="image/png" />
</head>
<body>
    <main>
        <div class="container">
            <div class="row justify-content-md-center">
                <div class="col-sm-6 col-lg-4 container-login">
                    <div class="row">
                        <div class="col-sm-12 text-center">
                            <img class="logo responsive-img" src="~/imgs/logo-210x216.png" />
                        </div>
                    </div>

                    @* Inicio Form Login*@
                    <div class="row">
                        @using (Html.BeginForm("Login", "Account", FormMethod.Post, new { @class = "col" }))
                        {
                            @Html.ValidationSummary(false, "", new { @class = "text-danger" })
                    
                            // Row for input Email
                            <div class="form-group">
                                <div class="row">
                                    <div class="col-sm-12">
                                        @*@Html.Label("cpf", "CPF", new { @class = "lbl-cpf" })*@
                                        @Html.TextBox("cpf", null, new { @class = "form-control", type = "text", id = "cpf", placeholder = "CPF", spellcheck="false", pattern = "[0-9]+$", required = "true" })
                                    </div>
                                </div>
                            </div>
                            <div class="form-group">
                                @*Row for input password*@
                                <div class="row">
                                    <div class="col-sm-12">
                                        @*@Html.Label("password", "Password")*@
                                        @Html.TextBox("password", null, new { @class = "form-control", type = "password", placeholder = "Password", required = "true" })
                                    </div>
                                </div>
                            </div>
                            <div class="row">
                                <div class="col-sm-12">
                                    <button class="btn btn-primary" type="submit" name="action">
                                        Login

                                    </button>
                                </div>
                            </div>
                        }
                        @* End of form login*@

                    </div>
                </div>
            </div>
        </div>
    </main>

    @*Javascript at end of body for optimized loading*@
    <script src="https://code.jquery.com/jquery-3.3.1.slim.min.js" integrity="sha384-q8i/X+965DzO0rT7abK41JStQIAqVgRVzpbzo5smXKp4YfRvH+8abtTE1Pi6jizo" crossorigin="anonymous"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.14.3/umd/popper.min.js" integrity="sha384-ZMP7rVo3mIykV+2+9J3UJ46jBk0WLaUAdn689aCwoqbBJiSnjAK/l8WvCWPIPm49" crossorigin="anonymous"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.1.2/js/bootstrap.min.js" integrity="sha384-o+RDsa0aLu++PJvFqy8fFScvbHFLtbvScb8AjopnFD+iEQ7wo/CG0xlczd+2O/em" crossorigin="anonymous"></script>
</body>
</html>