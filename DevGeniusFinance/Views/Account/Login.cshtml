
@{
    Layout = null;
}

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Login - DevGenius Finance</title>
    @*<link rel="stylesheet" href="~/Content/reset/reset.css" type="text/css" />*@
    <link rel="stylesheet" href="https://fonts.googleapis.com/css?family=Roboto|Roboto+Condensed">
    <link rel="stylesheet" href="~/Content/bootstrap/bootstrap.css" type="text/css">
    <link rel="stylesheet" href="~/Content/login/login.css"  type="text/css" />
    <link href="~/imgs/navicon.png" rel="icon" type="image/png" />
</head>
<body>
    <main>
        <div class="container">
            <div class="row justify-content-md-center">

                @*Container login*@
                <div class="col-sm-6 col-lg-4 container-login">

                    @*Row for container logo*@
                    <div class="row">
                        <div class="col-sm-12 text-center">
                            <img class="logo responsive-img" src="~/imgs/logo-210x216.png" />
                        </div>
                    </div>
                    @*End row container logo*@

                    @* Inicio Form Login*@
                    <div class="row">
                        @using (Html.BeginForm("Login", "Account", FormMethod.Post, new { @class = "col", id = "form-login" }))
                        {
                            @Html.ValidationSummary(false, "", new { @class = "text-danger" })
                    
                            // Row for input email
                            <div class="form-group">
                                <div class="row">
                                    <div class="col-sm-12">
                                        @*@Html.Label("cpf", "CPF", new { @class = "lbl-cpf" })*@
                                        @Html.TextBox("cpf", null, new { @class = "form-control", type = "text", id = "cpf", placeholder = "CPF", spellcheck="false", required = "true" })
                                    </div>
                                </div>
                            </div>
                            // End row input email

                            // Row for input password
                            <div class="form-group">
                                @*Row for input password*@
                                <div class="row">
                                    <div class="col-sm-12">
                                        @*@Html.Label("password", "Password")*@
                                        @Html.TextBox("password", null, new { @class = "form-control", type = "password", placeholder = "Password", required = "true" })
                                    </div>
                                </div>
                            </div>
                            // End row input password

                            // Button submit
                            <div class="row">
                                <div class="col-sm-12">
                                    <button class="btn btn-primary" type="submit" name="action">
                                        Login

                                    </button>
                                </div>
                            </div>
                            // End button submit

                        }

                    </div>
                    @* End form login*@

                </div>
            </div>
        </div>
    </main>

    @*Javascript at end of body for optimized loading*@
    <script src="~/Scripts/jquery/jquery-3.0.0.js"></script>
    <script src="~/Scripts/bootstrap/bootstrap.js"></script>
    <script src="~/Scripts/lib/jquery.mask.min.js?"></script>
    <script src="~/Scripts/login/login.js"></script>

</body>
</html>