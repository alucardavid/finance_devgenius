@using System.Web.Optimization;

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1 shrink-to-fit=no">
    <title>@ViewBag.Title - DevGenius Finance</title>
    <link href="~/imgs/navicon.png" rel="icon" type="image/png" />
    <link href="https://fonts.googleapis.com/css?family=Roboto|Roboto+Condensed" rel="stylesheet">
    @Styles.Render("~/bundles/estilos-default")
    <link href="~/Content/open-iconic/open-iconic-bootstrap.css" rel="stylesheet" />
</head>
<body>
    <div class="main-container">
        <ul id="sidebar" class="nav flex-column bg-dark">
            <li class="nav-item">
                <a class="nav-link text-center text-white" href="#">Home</a>
            </li>
        </ul>
        <div role="main" class="main-content">
            <header>
                @Html.Partial("_MenuSuperior")
            </header>
            <section>
                <div class="container-fluid">
                    <div class="row">
                        <div class="col-12">
                            @RenderBody()
                        </div>
                    </div>
                </div>
            </section>
            <footer class="container-fluid">
                <hr class="m-0" />
                <span class="text-muted pl-3">&copy; @DateTime.Now.Year - DevGenius</span>
            </footer>
        </div>
    </div>

    <script src="~/Scripts/jquery/jquery-3.0.0.js" type="text/javascript"></script>
    <script src="~/Scripts/bootstrap/bootstrap.js" type="text/javascript"></script>
    <script src="~/Scripts/_layout/main.js" type="text/javascript"></script>
</body>
</html>